{
  "name": "tree-is-clean",
  "version": "1.0.3",
  "private": true,
  "description": "Check whether previous actions left the Git working tree clean",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Chris Black",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^13.9.2",
    "@typescript-eslint/parser": "^4.0.0",
    "@vercel/ncc": "^0.23.0",
    "eslint": "^7.5.0",
    "eslint-plugin-github": "^4.0.1",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^26.4.3",
    "typescript": "^3.9.10"
  }
}
